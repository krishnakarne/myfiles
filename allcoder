canActivate(next: ActivatedRouteSnapshot, state: RouterStateSnapshot): boolean | Promise<boolean> | Observable<boolean> {
  if (this.isLoggedin) {
    return true;
  } else {
    return this.getsso().toPromise().then(() => {
      if (this.isLoggedin) {
        return true;
      } else {
        this.router.navigate(['/login']);
        return false;
      }
    }).catch((error) => {
      console.error('SSO Request failed:', error);
      this.router.navigate(['/login']);
      return false;
    });
  }
}
