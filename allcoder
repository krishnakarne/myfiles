<!-- Actions column -->
<ng-container matColumnDef="actions">
  <th mat-header-cell *matHeaderCellDef>Actions</th>
  <td mat-cell *matCellDef="let element">
    <!-- Toggle between pencil and check icon based on editing state -->
    <div class="icon-wrapper">
      <button mat-button (click)="toggleEdit(element)" class="edit-btn">
        <mat-icon *ngIf="!element.isEditing">edit</mat-icon>
        <mat-icon *ngIf="element.isEditing">check</mat-icon>
      </button>
      <button mat-button (click)="deleteRow(element)" class="delete-btn">
        <mat-icon>delete</mat-icon>
      </button>
    </div>
  </td>
</ng-container>

/* Wrapper for the icons */
.icon-wrapper {
  display: flex;
  justify-content: center;
  align-items: center;
}

/* Button styling for edit/check icons */
button.mat-button.edit-btn {
  border-radius: 50%;
  padding: 8px;
  background-color: #007bff; /* Blue background for edit icon */
  color: white; /* White icon color */
  border: none;
  margin-right: 10px; /* Space between buttons */
}

/* Button styling for delete icon */
button.mat-button.delete-btn {
  border-radius: 50%;
  padding: 8px;
  background-color: #dc3545; /* Red background for delete icon */
  color: white;
  border: none;
}

/* Icon size */
.mat-icon {
  font-size: 18px;
}

/* Hover effect */
button.mat-button:hover {
  opacity: 0.9;
  transition: opacity 0.2s ease-in-out;
}
