 <ng-container matColumnDef="actions">
        <th mat-header-cell *matHeaderCellDef>Actions</th>
        <td mat-cell *matCellDef="let element">
          <!-- Toggle between pencil and check icon based on editing state -->
          <button mat-button (click)="toggleEdit(element)">
            <mat-icon *ngIf="editingElement !== element">edit</mat-icon>
            <mat-icon *ngIf="editingElement === element">check</mat-icon>
          </button>
          <button mat-button (click)="deleteRow(element)">
            <mat-icon>delete</mat-icon>
          </button>
        </td>
      </ng-container>
